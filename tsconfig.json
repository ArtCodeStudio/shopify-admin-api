{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "declaration": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "dist/**/*.d.ts",
        "dist"
    ]
}
